<div class="form_group">
  <h2 class='center'>Création d'un projet</h2>
  <div>
    <%= form_with model: @project, method: :post, url: admin_projects_path ,class:'form' do |f| %>
      <div>
        <%= f.text_field :project_title, placeholder: 'Titre' , class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.text_area :description, placeholder: 'Description rapide' , class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.text_area :story, placeholder: 'Histoire compléte', class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.collection_select :owner_id, @users,:id, :email,{}, placeholder: 'Auteur', class:'input input__lg '%>
      </div>
      <div>
        <%= f.text_field :logo_url, placeholder: 'Lien de l\'image', class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.text_field :figma_link, placeholder: 'Lien Figma', class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.text_field :trello_link, placeholder: 'Lien Trello', class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.text_field :git_link, placeholder: 'Lien GitHub', class:'input input__lg input__neumorphism'%>
      </div>
      <div>
        <%= f.collection_select :needed_id, @neededs,:id , :name,{}, placeholder: 'Compétence recherchée' , class:'input input__lg input__neumorphism'%>
      </div>
      <%= f.submit 'Créer' ,class:'pill__outlined button m-top align_right'%>
    <% end %>
  </div>
